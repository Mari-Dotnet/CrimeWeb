<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.9.0/bootstrap-table.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/Multiselect/example-styles.css" rel="stylesheet" />


    <style>
        .logout {
            font-size: 18px;
        }
        .heading{
            text-align:center;
        }
    </style>
</head>
<body>
    <div class="row" style="background: cadetblue;margin-top: -49px;">
        <div class="col-md-3" style="text-align:center">
            <img style="height:107px; width: 128px" src="~/Content/Images/Police_logo.jpg" />
        </div>
        <div class="col-md-6">
            <div>
                <h1> CBCID</h1>
            </div>
            <div>
                <h2 style="font-size:20px">Crime Branch- Criminal Investigation Department</h2>
            </div>
        </div>
        <div class="col-md-3" style="text-align:left">
            <img style="height: 107px; width: 170px" src="~/Content/Images/CIDimage.jpg" />
        </div>
    </div>
    @*navbar-fixed-top*@
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Investigator", "InvestigatorList", "Investigator")</li>
                    <li>@Html.ActionLink("Criminal", "CriminalList", "Criminal")</li>
                    <li>@Html.ActionLink("FIR", "FIRList", "FIR")</li>
                    <li>@Html.ActionLink("Action Taken", "ActionList", "ActionTaken")</li>
                    <li>@Html.ActionLink("Search", "searchList", "Search")</li>
                </ul>
                <div style="text-align:right;margin-top:15px">
                    @Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "logout" });

                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @Scripts.Render("~/bundles/jquery")

        @RenderBody()
        <hr />
        <footer>
            <p style="color:Highlight;text-align:right">&copy; @DateTime.Now.Year Crime Department</p>
        </footer>
    </div>

    

    <script src="~/Scripts/Commonjs/Common.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
